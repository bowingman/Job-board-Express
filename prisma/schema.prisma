// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  password    String
  role        String
  title       String
  description String
  rate        Int
  approved    Boolean
  request     ApplyRequest?
  job         Job?
}

model Job {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  rate        Int
  approved    Boolean
  status      String
  request     ApplyRequest?
  user        User          @relation(fields: [userId], references: [id])
  userId      Int           @unique
}

model Application {
  id      Int    @id @default(autoincrement())
  content String
  rate    Int
}

model ApplyRequest {
  id     Int  @id @default(autoincrement())
  job    Job  @relation(fields: [jobId], references: [id])
  jobId  Int  @unique
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
